<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/pn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintRight_toRightOf="parent"
        android:text="网络监测"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--  -->

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#11000000"
        app:layout_constraintTop_toBottomOf="@id/back"
        />

    <ImageView
        android:id="@+id/ivResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/qy"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/tvResult"
        app:layout_constraintLeft_toRightOf="@id/ivResult"
        app:layout_constraintTop_toTopOf="@id/ivResult"
        app:layout_constraintBottom_toBottomOf="@id/ivResult"
        android:text="网络状况正常"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#11000000"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ivResult"
        />

    <TextView
        android:id="@+id/tvPermission"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:text="网络权限"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/permission"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:text="--"
        android:textColor="@android:color/black"
        android:padding="15dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#11000000"
        app:layout_constraintTop_toBottomOf="@id/tvPermission"
        />

    <TextView
        android:id="@+id/tvConnect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPermission"
        android:text="网络连接情况"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/connect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPermission"
        android:text="--"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#11000000"
        app:layout_constraintTop_toBottomOf="@id/tvConnect"
        />

    <TextView
        android:id="@+id/tvServerConnect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvConnect"
        android:text="服务器连接情况"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/serverConnect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvConnect"
        android:text="--"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#11000000"
        app:layout_constraintTop_toBottomOf="@id/tvServerConnect"
        />

    <TextView
        android:id="@+id/tvDnsTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvServerConnect"
        android:text="域名解析耗时"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dnsTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvServerConnect"
        android:text="--"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#11000000"
        app:layout_constraintTop_toBottomOf="@id/tvDnsTime"
        />

    <TextView
        android:id="@+id/tvConnectTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDnsTime"
        android:text="连接耗时"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/connectTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDnsTime"
        android:text="--"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#11000000"
        app:layout_constraintTop_toBottomOf="@id/tvConnectTime"
        />


    <TextView
        android:id="@+id/btnCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:background="@color/blue"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="重新检测"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/checking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back">

        <ImageView
            android:id="@+id/iv"
            android:src="@drawable/qx"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:text=""
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv"
            />

        <com.csh.networkmonitor.view.LoadingButton
            android:id="@+id/btnChecking"

            app:text="开始检测"
            app:background="@color/blue"
            app:successBackground="@drawable/ic_bg_blue_buttons_style"
            app:successIcon="@drawable/ic_done_white_24dp"
            app:textSize="14sp"
            app:boldText="false"
            app:textColor="@color/white"
            app:progressColor="@color/white"
            app:progressBarSize="small"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>