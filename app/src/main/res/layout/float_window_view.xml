<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlLayoutBig"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="@drawable/float_ball"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M↑："
        android:textColor="#ffffff"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tvMobileTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="0b/s"
        android:textColor="#ffffff"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="5dp"
        android:text="M↓："
        android:textColor="#ffffff"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tvMobileRx"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMobileTx"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="0b/s"
        android:textColor="#ffffff"
        android:textSize="9sp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"
        android:text="W↑："
        android:textColor="#ffffff"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tvWlanTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMobileRx"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginTop="5dp"
        android:text="0b/s"
        android:textColor="#ffffff"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:text="W↓："
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tvWlanRx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvWlanTx"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="0b/s"
        android:textColor="#ffffff"
        android:textSize="9sp" />

</RelativeLayout>